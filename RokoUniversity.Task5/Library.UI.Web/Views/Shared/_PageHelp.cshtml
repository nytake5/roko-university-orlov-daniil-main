@model Library.UI.Web.Models.PageViewModel

<div class="container">
    <ul class="pagination justify-content-sm-end">
        @if (Model.CurrentPage > 1)
        {
            <li>
                <a class="page-link" asp-controller="Notes" asp-action="Index" asp-route-pg="1">First</a>
            </li>
        }

        @if (Model.TotalPages > 0)
        {
            @for (int i = Model.StartPage; i < Model.EndPage + 1; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-controller="Notes" asp-action="Index" asp-route-pg="@i">@i</a>
                </li>
            }
        }

        @if (Model.CurrentPage < Model.TotalPages)
        {
            <li>
                <a class="page-link" asp-controller="Notes" asp-action="Index" asp-route-pg="@(Model.TotalPages)">Last</a>
            </li>
        }
    </ul>
</div>
